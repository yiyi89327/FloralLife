<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="2dp"
    android:background="#ffffff">

    <ImageView
        android:id="@+id/iv_zt_icon"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:src="@drawable/item_icon" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/cv_zt_author_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/item_author"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp"
        android:layout_alignBottom="@+id/ll_zt_author"
        android:layout_alignRight="@+id/iv_zt_icon"
        android:layout_alignEnd="@+id/iv_zt_icon" />

    <LinearLayout
        android:id="@+id/ll_zt_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_zt_icon"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_zt_author_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="90dp"
            android:gravity="right"
            android:textSize="12sp"
            android:text="一窝时光"/>
        <TextView
            android:id="@+id/tv_zt_author_class"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="90dp"
            android:gravity="right"
            android:textSize="8sp"
            android:text="资深设计师"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_zt_explain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_zt_author"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_zt_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#eacd76"
            android:textSize="12sp"
            android:text="[家庭庭院]"/>
        <TextView
            android:id="@+id/tv_zt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="12sp"
            android:text="那一抹迷人的红|乌木杂"/>
        <TextView
            android:id="@+id/tv_zt_explain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="8sp"
            android:text="养多肉的乐趣就在于每个季节的颜色状态都不一样..."/>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_zt_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/ll_zt_explain"
        android:background="#bacac6"
        android:layout_marginTop="5dp"/>

    <LinearLayout
        android:id="@+id/ll_zt_collect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:paddingTop="5dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/iv_zt_line"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_zt_eye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:src="@drawable/zt_item_eye"/>
        <TextView
            android:id="@+id/tv_zt_eye_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="527"
            android:layout_marginRight="5dp"/>
        <ImageView
            android:id="@+id/iv_zt_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:src="@drawable/zt_item_collect"/>
        <TextView
            android:id="@+id/tv_zt_collect_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginRight="5dp"
            android:text="24"/>
        <ImageView
            android:id="@+id/iv_zt_discuss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:src="@drawable/zt_item_discuss"/>
        <TextView
            android:id="@+id/tv_zt_discuss_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginRight="5dp"
            android:text="2"/>
    </LinearLayout>


</RelativeLayout>
