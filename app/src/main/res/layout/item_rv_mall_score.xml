<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp">

    <LinearLayout
        android:id="@+id/ll_mall_score_whole"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:padding="5dp">

        <ImageView
            android:id="@+id/iv_mall_score_icon"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:scaleType="fitXY"
            android:src="@drawable/htxq_logo" />

        <TextView
            android:id="@+id/tv_mall_score_en_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:text="En Name"
            android:textColor="@color/textGray" />

        <TextView
            android:id="@+id/tv_mall_score_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_mall_score_require_score"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="ï¿¥1200.0"
            android:textColor="@color/whiteyellow"
            android:textSize="12sp" />
    </LinearLayout>
</android.support.v7.widget.CardView>