<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/my_fragment_bg">

    <Button
        android:id="@+id/btn_my_icon_close"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_alignParentRight="true"
        android:onClick="onClick"
        android:background="@drawable/my_fragment_close"/>

    <ImageView
        android:id="@+id/iv_my_icon_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/htxq_logo"
        android:paddingTop="50dp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btn_my_icon_login"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="12sp"
        android:layout_above="@+id/btn_my_icon_register"
        android:background="@drawable/kuang"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="20dp"
        android:onClick="onClick"
        android:text="登录" />

    <Button
        android:id="@+id/btn_my_icon_register"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="12sp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/kuang"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="50dp"
        android:onClick="onClick"
        android:text="注册" />

</RelativeLayout>