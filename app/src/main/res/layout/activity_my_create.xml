<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/my_fragment_bg">

    <Button
        android:id="@+id/btn_my_create_back"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentLeft="true"
        android:onClick="onClick"
        android:background="@drawable/my_fragment_back"/>

    <Button
        android:id="@+id/btn_my_create_close"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentRight="true"
        android:onClick="onClick"
        android:background="@drawable/my_fragment_close"/>

    <ImageView
        android:id="@+id/iv_my_create_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/htxq_logo"
        android:paddingTop="30dp"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:id="@+id/ll_my_create_country"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:paddingTop="30dp"
        android:layout_below="@+id/iv_my_create_logo">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/my_fragment_location"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="10sp"
            android:gravity="center"
            android:text="国家地区/Location" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:textSize="10sp"
            android:gravity="center"
            android:text="中国+86"/>
        <Button
            android:id="@+id/btn_my_create_country"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="right|center_vertical"
            android:onClick="onClick"
            android:background="@drawable/my_fragment_right" />
    </LinearLayout>

    <View
        android:id="@+id/v_my_create_line1"
        android:layout_width="220dp"
        android:layout_height="1dp"
        android:background="@android:color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/ll_my_create_country"/>

    <LinearLayout
        android:id="@+id/ll_my_create_username"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:paddingTop="10dp"
        android:layout_below="@+id/v_my_create_line1"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/my_fragment_phone"/>
        <EditText
            android:id="@+id/et_create_my_phone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="10sp"
            android:background="@null"
            android:paddingLeft="15dp"
            android:hint="用户名/User Name"/>
    </LinearLayout>

    <View
        android:id="@+id/v_my_create_line2"
        android:layout_width="220dp"
        android:layout_height="1dp"
        android:background="@android:color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/ll_my_create_username"/>

    <LinearLayout
        android:id="@+id/ll_my_create_code"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:paddingTop="10dp"
        android:layout_below="@+id/v_my_create_line2"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/my_create_code"/>
        <EditText
            android:id="@+id/et_my_create_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="10sp"
            android:background="@null"
            android:paddingLeft="15dp"
            android:hint="验证码/Code"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:textSize="10sp"
            android:background="@drawable/kuang"
            android:text="获取验证"/>
    </LinearLayout>

    <View
        android:id="@+id/v_my_create_line3"
        android:layout_width="220dp"
        android:layout_height="1dp"
        android:background="@android:color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/ll_my_create_code"/>

    <LinearLayout
        android:id="@+id/ll_my_create_psw"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:paddingTop="10dp"
        android:layout_below="@+id/v_my_create_line3"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/my_fragment_pwd"/>
        <EditText
            android:id="@+id/et_my_create_psw"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="10sp"
            android:background="@null"
            android:paddingLeft="15dp"
            android:hint="密码/Password"/>
    </LinearLayout>

    <View
        android:id="@+id/v_my_create_line4"
        android:layout_width="220dp"
        android:layout_height="1dp"
        android:background="@android:color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/ll_my_create_psw"/>

    <Button
        android:id="@+id/btn_my_create_register"
        android:layout_width="220dp"
        android:layout_height="30dp"
        android:textSize="10sp"
        android:background="@drawable/kuang"
        android:text="注册"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/v_my_create_line4"/>

    <LinearLayout
        android:id="@+id/ll_my_create_agreement"
        android:layout_width="220dp"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="注册即表示我同意"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="5dp"
            android:paddingLeft="5dp">
            <TextView
                android:id="@+id/tv_my_create_agreement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:onClick="onClick"
                android:clickable="true"
                android:text="花田小憩服务条款"/>
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_below="@+id/tv_my_create_agreement"
                android:layout_alignLeft="@+id/tv_my_create_agreement"
                android:layout_alignRight="@+id/tv_my_create_agreement"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_my_create_provision"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="内容"/>
    </LinearLayout>


</RelativeLayout>
