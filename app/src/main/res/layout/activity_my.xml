<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:background="@drawable/my_fragment_bg">

    <Button
        android:id="@+id/iv_my_back"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:background="@drawable/my_fragment_back"/>

    <Button
        android:id="@+id/iv_my_close"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/my_fragment_close"/>

    <ImageView
        android:id="@+id/iv_my_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/htxq_logo"
        android:paddingTop="30dp"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:id="@+id/ll_my_country"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:paddingTop="30dp"
        android:layout_below="@+id/iv_my_logo">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/my_fragment_location"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="10sp"
            android:gravity="center"
            android:text="国家地区/Location" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:textSize="10sp"
            android:gravity="center"
            android:text="中国+86"/>
        <Button
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="right|center_vertical"
            android:background="@drawable/my_fragment_right" />
    </LinearLayout>

    <View
        android:id="@+id/v_my_line1"
        android:layout_width="220dp"
        android:layout_height="1dp"
        android:background="@android:color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/ll_my_country"/>

    <LinearLayout
        android:id="@+id/ll_my_phone"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:paddingTop="10dp"
        android:layout_below="@+id/v_my_line1"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/my_fragment_phone"/>
        <EditText
            android:id="@+id/et_my_phone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="10sp"
            android:background="@null"
            android:paddingLeft="15dp"
            android:hint="手机号/TEL"/>
    </LinearLayout>

    <View
        android:id="@+id/v_my_line2"
        android:layout_width="220dp"
        android:layout_height="1dp"
        android:background="@android:color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/ll_my_phone"/>

    <LinearLayout
        android:id="@+id/ll_my_psw"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:paddingTop="10dp"
        android:layout_below="@+id/v_my_line2"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/my_fragment_pwd"/>
        <EditText
            android:id="@+id/et_my_psw"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="10sp"
            android:background="@null"
            android:paddingLeft="15dp"
            android:hint="密码/Password"/>
    </LinearLayout>

    <View
        android:id="@+id/v_my_line3"
        android:layout_width="220dp"
        android:layout_height="1dp"
        android:background="@android:color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/ll_my_psw"/>

    <LinearLayout
        android:id="@+id/ll_my_entry"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:paddingTop="10dp"
        android:layout_below="@+id/v_my_line3"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_my_register"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="10sp"
            android:gravity="left|center_vertical"
            android:text="注册账号"/>
        <TextView
            android:id="@+id/tv_my_forget"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="10sp"
            android:gravity="right|center_vertical"
            android:text="忘记密码"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_my_login"
        android:layout_width="220dp"
        android:layout_height="30dp"
        android:textSize="10sp"
        android:background="@drawable/my_activity_button_bg"
        android:text="登录"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ll_my_entry"/>

    <LinearLayout
        android:id="@+id/ll_my_thirdparty"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:paddingTop="30dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_below="@+id/btn_my_login"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:background="@android:color/darker_gray"
            />
        <TextView
            android:id="@+id/tv_my_thirdparty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.6"
            android:textSize="8sp"
            android:gravity="center"
            android:text="第三方账号登录"/>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:background="@android:color/darker_gray"
            />
    </LinearLayout>

    <RadioGroup
        android:id="@+id/rg_my_thirdparty_logo"
        android:layout_width="220dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/ll_my_thirdparty"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/rb_my_weixin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/my_fragment_weixin"
            android:textSize="8dp"
            android:gravity="center"
            android:text="微信"/>
        <RadioButton
            android:id="@+id/rb_my_weibo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/my_fragment_weibo"
            android:textSize="8dp"
            android:gravity="center"
            android:text="微信"/>
        <RadioButton
            android:id="@+id/rb_my_qq"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/my_fragment_weibo"
            android:textSize="8dp"
            android:gravity="center"
            android:text="微信"/>
    </RadioGroup>

    <LinearLayout
        android:id="@+id/ll_my_agreement"
        android:layout_width="220dp"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="注册即表示我同意"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="5dp"
            android:paddingLeft="5dp">
            <TextView
                android:id="@+id/tv_my_agreement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:onClick="onClick"
                android:clickable="true"
                android:text="花田小憩服务条款"/>
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_below="@+id/tv_my_agreement"
                android:layout_alignLeft="@+id/tv_my_agreement"
                android:layout_alignRight="@+id/tv_my_agreement"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_my_provision"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="内容"/>
    </LinearLayout>
</RelativeLayout>
