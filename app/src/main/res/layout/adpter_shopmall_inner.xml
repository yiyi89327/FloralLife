<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
 >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp">

        <ImageView
            android:id="@+id/shopmall_inner_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />
        <TextView
            android:id="@+id/shopmall_inner_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/shopmall_inner_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginBottom="10dp"
            android:layout_above="@+id/shopmall_inner_price"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/shopmall_inner_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_above="@+id/shopmall_inner_name"
            android:layout_marginBottom="10dp"
            android:textSize="15sp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
