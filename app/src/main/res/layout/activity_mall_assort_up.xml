<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/searchBackground"
    tools:context="com.yunmeng.florallife.activity.MallAssortUpActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/toolbarcolor"
        android:padding="5dp">
        <ImageView
            android:id="@+id/iv_mall_assort_up_back"
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:clickable="true"
            android:background="@drawable/main_detail_back"/>
        <TextView
            android:id="@+id/tv_mall_assort_up_title"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="列表"
            android:layout_centerInParent="true"
            android:textColor="@color/black"
            android:textSize="18sp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/textGray"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_mall_assort_up_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"/>

</LinearLayout>
